version: "3.1"
services:
  web:
    build: ./app
    ports:
      - "8082:5000"
  redis:
    image: "redis:alpine"
  db:
    image: mysql:8.0
    ports:
      - "3306"
    volumes:
      - data:/var/lib/mysql
      - ./billingdb.sql:/docker-entrypoint-initdb.d/billingdb.sql
      - "MYSQL_DATABASE=weightDB"
      - "MYSQL_USER=root"
      - "MYSQL_ROOT_PASSWORD=alpine"
    expose:
      - "3306"

volumes:
  data: